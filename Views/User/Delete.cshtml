@model AdminDemo.Models.UserMaster


<form method-post asp-action="DeletePost">

    <div class="border p-3">
        <input asp-for="UserId" hidden />
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete  User</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UserName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UserName" disabled class="form-control" />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100">
                                <i class="fa fa-arrow-right-to-bracket"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>

        </div>
    </div>

</form>

@section scripts{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}


