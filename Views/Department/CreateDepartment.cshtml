@model AdminDemo.Models.DepartmentMaster

<form method="post" asp-action="CreateDepartment">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info Pl-3">Add Department</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DepartmentName"></label>
                    </div>
                    <div class="col-8">
                          <input asp-for="DepartmentName" class="form-control" />
                      <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>

                        <div class="col">
                            <a asp-action="IndexDepartment" class="btn btn-primary w-100">
                                <i class="fa-solid fa-arrow-right-to-bracket"></i> &nbsp;  Back
                            </a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-4">

            </div>
        </div>
    </div>
</form>


@section scripts{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}