@model AdminDemo.Models.RollMaster


<form method-post asp-action="EditRoll" asp-controller="Roll">

    <div class="border p-3">
        <input asp-for="RollId" hidden />
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Roll</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RollName"></label>
                    </div>
                    <div class="col-8">
                         <input asp-for="RollName" class="form-control"/>
                       
                        <span asp-validation-for="RollName" class="text-danger"></span>
                    </div>
                </div>





                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>

                        <div class="col">
                            <a asp-action="IndexRoll" class="btn btn-primary w-100">
                                <i class="fa-solid fa-arrow-right-to-bracket"></i> &nbsp Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>

        </div>
    </div>

</form>

@section scripts{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

