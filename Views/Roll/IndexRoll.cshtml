@model IEnumerable<AdminDemo.Models.RollMaster>


<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6 text-left">
            <a asp-controller="Roll" asp-action="CreateRoll" class="btn btn-primary">
                <i class="fa fa-plus"></i> &nbsp; Create New Roll
            </a>
        </div>
    </div>
</div>



@if (Model.Count() > 0)
{
    <div>
        <table id="parentdiv" class="display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>
                        RollName
                    </th>

                    <th>

                    </th>
            <tbody>
                        @foreach (var obj in Model)
                        {
                    <tr>

                        <td width:"50%">@obj.RollName</td>


                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Roll" asp-route-Id="@obj.RollId" asp-action="EditRoll" class="btn btn-primary btn-sm">
                                    <i class="fa fa-pen-to-square"></i> &nbsp;
                                </a>
                                <a asp-controller="Roll" asp-route-Id="@obj.RollId" asp-action="DeleteRoll" class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash-can"></i> &nbsp;
                                </a>
                            </div>
                        </td>
                    </tr>
                        }
            </tbody>
        </table>
    </div>


}

 else
    {
        <p>No Roll data</p>
    }